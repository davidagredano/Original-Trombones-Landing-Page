doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="icon", href="https://cdn-icons-png.flaticon.com/512/4268/4268766.png", type="image/png", sizes="32x32")
    link(rel="stylesheet", href="https://fonts.google.com/specimen/Public+Sans")
    link(rel="stylesheet", href="main.css")
    title Original Trombones
    meta(name="description", content="Original Trombones")
    script(src="https://kit.fontawesome.com/5f668f5af8.js" crossorigin="anonymous")
    
  //BODY
  body.l-body

    //HEADER
    header.l-header#header
      .header__wrapper   
        img(src="https://cdn.freecodecamp.org/testable-projects-fcc/images/product-landing-page-logo.png", alt="original-trombones-logo").logo#header-img
        nav.nav#nav-bar
          ul.nav__list
            li.nav__item 
              a.nav__link.nav-link(href="#features") Features
            li.nav__item 
              a.nav__link.nav-link(href="#how-it-works") How It Works
            li.nav__item 
              a.nav__link.nav-link(href="#pricing") Pricing
    
    //MAIN
    main.l-main 
      .overlay

      //HERO
      section.section
        .section__wrapper
          h1.section__heading.section__heading--hero Handcrafted, home-made masterpieces
          form.form#form(action="https://www.freecodecamp.com/email-submit", method="post")
            input.form__input--email#email(type="email", name="email", placeholder="Enter your email address")
            input.form__input--submit#submit(type="submit", value="Get Started") 

      //FEATURES
      section.section.section--darker-bg#features
        .section__wrapper
          h2.section__heading Why choose Original Trombones?
          p.section__copy Lorem ipsum dolor sit amet consectetur adipisicing elit. Molestias aspernatur facilis corrupti necessitatibus, quod commodi consequatur illum, nostrum, harum quia doloremque assumenda accusamus nam vero ipsam aliquid optio dolorum architecto.
        .section__wrapper.section__wrapper--cards
          article.card 
            .card__wrapper
              i.fa-solid.fa-star.fa-2xl
            .card__wrapper
              h3.card__heading Premium Materials
              p.card__copy Our trombones use the shiniest brass which is sourced locally. This will increase the longevity of your purchase.
          article.card 
            .card__wrapper
              i.fa-solid.fa-truck-fast.fa-2xl
            .card__wrapper
              h3.card__heading Fast Shipping
              p.card__copy We make sure you recieve your trombone as soon as we have finished making it. We also provide free returns if you are not satisfied.
          article.card 
            .card__wrapper
              i.fa-solid.fa-shield-halved.fa-2xl
            .card__wrapper
              h3.card__heading Quality Assurance
              p.card__copy For every purchase you make, we will ensure there are no damages or faults and we will check and test the pitch of your instrument.

      //VIDEO
      section.section#how-it-works
        .section__wrapper
          iframe.video#video(src="https://www.youtube.com/embed/8-fkvWFSeYc?rel=0&controls=0&showinfo=0", title="What does a trombone sound like?", frameborder="0", allowfullscreen) 
      
      //PRICING
      section.section.section--darker-bg#pricing
        .section__wrapper
          h2.section__heading Pricing
        .section__wrapper.section__wrapper--pricing-cards 
          article.pricing-card
            .pricing-card__header 
              h3.pricing-card__title TENOR TROMBONE
            .pricing-card__body
              h4.pricing-card__price $600
              ul.pricing-card__list
                li.pricing-card__item Lorem ipsum.
                li.pricing-card__item Lorem ipsum.
                li.pricing-card__item Lorem ipsum dolor.
                li.pricing-card__item Lorem ipsum.
              button.pricing-card__button SELECT
          article.pricing-card
            .pricing-card__header 
              h3.pricing-card__title BASS TROMBONE
            .pricing-card__body
              h4.pricing-card__price $900
              ul.pricing-card__list
                li.pricing-card__item Lorem ipsum.
                li.pricing-card__item Lorem ipsum.
                li.pricing-card__item Lorem ipsum dolor.
                li.pricing-card__item Lorem ipsum.
              button.pricing-card__button SELECT
          article.pricing-card
            .pricing-card__header 
              h3.pricing-card__title VALVE TROMBONE
            .pricing-card__body
              h4.pricing-card__price $1200
              ul.pricing-card__list
                li.pricing-card__item Plays similar to a Trumpet.
                li.pricing-card__item Great for Jazz Bands.
                li.pricing-card__item Lorem ipsum dolor.
                li.pricing-card__item Lorem ipsum.
              button.pricing-card__button SELECT

    //FOOTER
    footer.l-footer
      .footer__wrapper
        .footer__wrapper
          ul.social-icons__list  
            li.social-icons__item 
              a.social-icons__link(href="") 
                i.fa-brands.fa-facebook
            li.social-icons__item 
              a.social-icons__link(href="") 
                i.fa-brands.fa-youtube
            li.social-icons__item 
              a.social-icons__link(href="") 
                i.fa-brands.fa-instagram
            li.social-icons__item 
              a.social-icons__link(href="") 
                i.fa-brands.fa-twitter
            li.social-icons__item 
              a.social-icons__link(href="") 
                i.fa-brands.fa-pinterest
        .footer__wrapper
          ul.footer-links__list 
            li.footer-links__item 
              a.footer-links__link(href="") Privacy
            li.footer-links__item 
              a.footer-links__link(href="") Terms
            li.footer-links__item 
              a.footer-links__link(href="") Contact
